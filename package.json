{
  "name": "social-from-email",
  "version": "1.0.0",
  "description": "Given an email, return best-effort social profile URLs if publicly discoverable (Gravatar + heuristics).",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "social-from-email": "./dist/cli.cjs",
    "google-search": "./dist/cli-search.cjs"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts src/cli-search.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts src/cli.ts src/cli-search.ts --dts --format esm,cjs --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "email",
    "social",
    "osint",
    "gravatar"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/puppeteer": "^7.0.4",
    "dotenv": "^17.2.1",
    "puppeteer": "^24.16.2",
    "tree-kill": "^1.2.2"
  }
}
