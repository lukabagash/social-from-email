{
  "name": "social-from-email",
  "version": "1.0.0",
  "description": "Given an email, return best-effort social profile URLs if publicly discoverable (Gravatar + heuristics).",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": "./dist/index.js",
  "bin": {
    "social-from-email": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --dts",
    "dev": "tsup src/index.ts src/cli.ts --dts --watch",
    "test": "node -e \"console.log('no tests yet')\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": ["email", "social", "osint", "gravatar"],
  "license": "ISC",
  "engines": { "node": ">=18.0.0" },
  "files": ["dist"],
  "devDependencies": {
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
